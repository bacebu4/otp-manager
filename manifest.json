{
  "manifest_version": 3,
  "name": "TOTP Code Generator3",
  "version": "1.0.0",
  "description": "Generate TOTP codes for websites with secure local storage",
  
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  
  "commands": {
    "paste-totp": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Generate and paste TOTP code into focused input"
    }
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "TOTP Code Generator3",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}